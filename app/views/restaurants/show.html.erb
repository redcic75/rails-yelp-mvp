<h1><%= @restaurant.name %></h1>
<ul class="list-group">
  <li class="list-group-item">Address: <%= @restaurant.address %></li>
  <li class="list-group-item">Phone: <%= @restaurant.phone_number %></li>
  <li class="list-group-item">Category: <%= @restaurant.category %></li>
</ul>
<ul class="list-group">
<h2 class="mt-3">Reviews</h2>
<% @restaurant.reviews.each do |review| %>
  <li class="list-group-item">
    <%= review.content %> - <%= review.rating %>
  </li>
<% end %>
</ul>
<h2>Create a new review for <%= @restaurant.name %></h2>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "Create a new review", class: "btn btn-primary" %>
<% end %>
